<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header', { title: 'Edit a Dog'}) %>
<body>
    <%- include('../partials/navbar') %>
    <form action="/dogs/editDog/<%= dog.id %>" method="POST" align="center">
        <h1 align="center">Edit a Dog</h1> <br>
        <label for="name">Name</label> <br>
        <input type="text" name="name" value="<%= dog.name %>"> <br>
    
        <label for="species">Species</label> <br>
        <input type="text" name="species" value="<%= dog.species %>"> <br>
    
        <label for="birthYear">Birth Year</label> <br>
        <input type="number" name="birthYear" value="<%= dog.birthYear%>"> <br>
    
        <label for="gender">Gender</label> <br>

        <% let options = ['male', 'female'] 
            options.forEach(el => {
                let checked = (el == dog.gender) ? "checked" : "" ; %>
                <input type="radio" name="gender" value="<%= el %>" <%= checked %>>
                <label for=""><%= el %></label>
            <% }) %>
        <br> <br>

        <label for="availability">Change Availability</label> <br>
        <% let availability = [false, true] 
            let option = ['Is Retired', 'Will Work Again']
            availability.forEach((el, idx) => {
                let check = (el == dog.availability) ? "checked" : "" ; %>
                <input type="radio" name="availability" value="<%= el %>" <%= check %>>
                <label><%= option[idx] %></label>
            <% }) %>
            <br> <br>
        
        <label for="speciality">Speciality</label> <br>
        <select name="speciality" name="speciality">
        <% let speciality = ['Autism Service Dogs', 'Diabetic Alert Dogs', 'Hearing Service Dogs', 'Seizure Response Dogs', 'Anxiety Alert Dogs', 'Mobility Assistance Dogs']

            speciality.forEach(el => {
                let selected = (el == dog.speciality) ? "selected" : "" ; %>
                <option value="<%= el %>" <%= selected %>>
                    <%= el %>
                </option>
            <% }) %>
            <br>
        </select> <br>

        <label for="imagePath">Image Path</label> <br>
        <textarea type="text" name="imagePath" cols="60" rows="1"><%= dog.imagePath %></textarea> <br>

        <label for="biodata">Biodata</label> <br>
        <textarea name="biodata" cols="60" rows="3"><%= dog.biodata %></textarea> <br>

        <button type="submit">Save</button>
    </form>
</body>
<%- include('../partials/footer') %>
</html>